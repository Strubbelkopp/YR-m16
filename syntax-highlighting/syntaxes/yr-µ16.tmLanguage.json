{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "YR-u16",
  "scopeName": "source.yr-u16",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#labels" },
    { "include": "#label-references" },
    { "include": "#instructions" },
    { "include": "#registers" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.yr-u16",
          "begin": ";",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.yr-u16" }
          },
          "end": "$",
          "patterns": [
            {
              "name": "keyword.codetag.notation.yr-u16",
              "match": "\\b(TODO|FIXME|NOTE)\\b"
            }
          ]
        }
      ]
    },

    "directives": {
      "patterns": [
        {
          "name": "entity.name.namespace.directive.yr-u16",
          "match": "@(let|import|data)\\b"
        }
      ]
    },

    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.yr-u16",
          "match": "^[ \\t]*(\\.?[A-Za-z][A-Za-z0-9_]*)(?=\\s*(?:\\([^\\n)]*\\))?\\s*:)"
        }
      ]
    },

    "label-references": {
      "patterns": [
        {
          "name": "meta.jump.call.labelref.yr-u16",
          "match": "\\b(?i:(?:jmp|jz|jeq|jnz|jne|jlt|jgt|jc|jnc|call))\\s+((?:\\.?[A-Za-z][A-Za-z0-9_]*))",
          "captures": {
            "0": { "name": "keyword.control.instruction.yr-u16" },
            "1": { "name": "entity.name.function.yr-u16" }
          }
        }
      ]
    },

    "instructions": {
      "patterns": [
        {
          "name": "keyword.control.instruction.yr-u16",
          "match": "\\b(?i:nop|halt|ret|mov|add|sub|mul|mulh|and|or|xor|shl|rol|shr|asr|ror|cmp|not|neg|jmp|jz|jeq|jnz|jne|jlt|jgt|jc|jnc|call|loadb|load|storeb|store|popb|pop|pushb|push)\\b"
        }
      ]
    },

    "registers": {
      "patterns": [
        {
          "name": "storage.register.yr-u16",
          "match": "\\b(?i:r[0-7]|sp|pc)\\b"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.bin.yr-u16",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.hex.yr-u16",
          "match": "\\b0x[0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.dec.yr-u16",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.yr-u16",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.yr-u16" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.yr-u16" } },
          "patterns": [
            {
              "name": "constant.character.escape.yr-u16",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.yr-u16",
          "begin": "'",
          "end": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.char.begin.yr-u16" } },
          "endCaptures": { "0": { "name": "punctuation.definition.char.end.yr-u16" } },
          "patterns": [
            {
              "name": "constant.character.escape.yr-u16",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.symbol.yr-u16",
          "match": "\\b[A-Z_][A-Z0-9_]*\\b"
        }
      ]
    },

    "variables": {
      "patterns": [
        {
          "name": "variable.other.yr-u16",
          "match": "\\b[a-z_][a-z0-9_]*\\b"
        }
      ]
    }
  }
}
